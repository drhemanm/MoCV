# .env.example
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Application
VITE_APP_NAME=MoCV.mu
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_API_BASE_URL=http://localhost:3001/api

# Features
VITE_FEATURE_AI=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_OFFLINE=false
VITE_DEBUG_LOGS=true

# Security
VITE_RATE_LIMITING=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000
VITE_ENCRYPTION=false

# Firebase (Optional - for authentication)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Backend Environment Variables (.env.server)
NODE_ENV=development
PORT=3001
OPENAI_API_KEY=your_openai_api_key_here
DATABASE_URL=postgresql://user:password@localhost:5432/mocv
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info

# Production Environment (.env.production)
VITE_APP_ENV=production
VITE_API_BASE_URL=https://api.mocv.mu
VITE_DEBUG_LOGS=false
VITE_RATE_LIMITING=true
